{
    "manifest_version": 3,
    "name": "Vault Extension",
    "version": "1.0",
    "description": "Secure vault autofill extension.",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost/*",
        "http://127.0.0.1/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content.bundle.js"
            ],
            "run_at": "document_idle"
        }
    ]
}